<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8" />
        <link type="text/css" rel="stylesheet" href="/static/css/admin_master.css" />
        <script type="text/javascript" src="/static/js/jquery-1.12.4.min.js"></script>
        <title>登录 - ZZ测试框架</title>
    </head>
    <body class="login">
        <form action="/login.html" method="post">
            <div class="login-layout">
                <div class="login-header">ZZ测试框架后台</div>
                <div class="login-textBox"><input type="text" id="userId" name="userId" placeholder="请输入账号" /></div>
                <div class="login-textBox"><input type="password" id="userPwd" name="userPwd" placeholder="请输入密码" /></div>
                <div class="login-btn"><input type="submit" value="登录" /></div>
                <% if(!login&&loginFailed){ %>
                <div class="login-msg">账号或密码错误！</div>
                <% } %>
            </div>
            <script type="text/javascript">
                $(function(){
                    var box=$(".login-layout");
                    var boxWidth=box.outerWidth();
                    var boxHeight=box.outerHeight();
                    var win=$(window);
                    var winWidth=win.outerWidth();
                    var winHeight=win.outerHeight();
                    var left=(winWidth-boxWidth)/2;
                    var top=(winHeight-boxHeight)/2;
                    box.css({"left":left+"px","top":top+"px"});
                    win.resize(function(){
                        winWidth=win.outerWidth();
                        winHeight=win.outerHeight();
                        left=(winWidth-boxWidth)/2;
                        top=(winHeight-boxHeight)/2;
                        box.css({"left":left+"px","top":top+"px"});
                    });
                    //console.log(parent.location.href="/");
                    //console.log(parent.length);
                    if(parent.length!=0) parent.location.href="/login.html";
                    <% if(login){ %>
                    window.location = "/";
                    <% } %>
                });
            </script>
        </form>
    </body>
</html>